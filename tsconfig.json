{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2017",
    "allowJs": false,

    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
